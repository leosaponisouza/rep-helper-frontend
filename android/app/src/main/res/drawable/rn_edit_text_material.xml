<?xml version="1.0" encoding="utf-8"?>
<!-- 
    Este é um arquivo de estilo para campos de texto no React Native
    Utilizado para definir a aparência dos componentes TextInput no Android
-->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado quando o EditText está focado -->
    <item android:state_focused="true">
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke android:width="1dp" android:color="@color/colorPrimary" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
            <corners android:radius="5dp" />
        </shape>
    </item>
    <!-- Estado padrão do EditText -->
    <item>
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke android:width="1dp" android:color="#444444" />
            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
            <corners android:radius="5dp" />
        </shape>
    </item>
</selector> 